<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/textviewplaynhacindex"
            android:textColor="#ffff"
            android:textSize="17sp"
            android:text="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Ten Ca Khuc"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/textviewplaynhacindex"
            android:id="@+id/textviewplaynhactenbaihat"/>

        <TextView
            android:id="@+id/textviewplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewplaynhactenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textviewplaynhacindex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Ca Si"
            android:textColor="#E6E3E3"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>